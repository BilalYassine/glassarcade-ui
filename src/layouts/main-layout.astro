---

import Nav from '../components/Nav.astro';
---
<html lang="en">
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div class="gradient-background"></div>
        <div id="imageLayer1" class="image-layer"></div>
        <div id="imageLayer2" class="image-layer"></div>
        <!-- <div class="content-wrapper"> -->
        <header>
            <Nav></Nav>
        </header>
        <slot />
    </div>
    </body>
</html>

<style>
    @media (max-width: 768px) {
        html, body {
            margin: 0;
            padding: 0;
            min-height: 100vh;
            overflow-x: hidden;
        }

        .gradient-background {
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 200vh; /* Height covering the full area for scrolling */
            z-index: -2;
            background: linear-gradient(180deg, rgba(109,115,134,1) 45%, rgba(114,92,105,1) 55%);
            background-repeat: no-repeat;
            background-size: cover;
        }

        .image-layer {
            position: absolute;
            left: 0;
            width: 100%;
            height: 100vh; /* Each image layer takes up the full viewport height */
            background-size: contain;
            background-repeat: no-repeat;
            background-position: center;
            pointer-events: none;
            z-index: -1;
        }

        #imageLayer1 {
            top: 0;
            background-image: url('/images/Glass-Arcade-Logo-Filled-Blue.png');
            opacity: 0.2;
        }

        #imageLayer2 {
            top: 100vh; /* Positioned to start at the bottom of the first image */
            background-image: url('/images/Glass-Arcade-Logo-Filled-Red.png');
            opacity: 0.2;
            transform: scaleX(-1);
        }

        .content-wrapper {
            position: relative;
            z-index: 100; /* Ensure content is above the images and gradient */
            min-height: 200vh; /* Minimum height to ensure content covers the scrolling area */
        }

        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1000; /* Ensure the header is above all other elements */
        }

/* Add additional styles as necessary */

    }

    @media (min-width: 769px) {
        header {
            /* background-color: rgba(255,255,255,0.1); */
            position: fixed;
            left: 0;   
            top: 0;      
            width: 100%;  
            z-index: 1000; /* Ensure the header is above all other elements */
        }
        
    }
</style>