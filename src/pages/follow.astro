---
// Supports weights 100-900
import '@fontsource-variable/montserrat';
import { Image } from 'astro:assets';
import FollowLayout from "../layouts/follow-layout.astro";
import LargeSocialIcon from '../components/LargeSocialIcon';
---

<FollowLayout>
    <br />
	<br />
	<br />
	<br />
    <br />
	<br />
	<br />
	<h1>Follow us on our Journey!</h1>
	<div class="w-[89%] mx-auto mb-8">
		<h2 class="mx-8 text-[1.5em] lg:text-[2em] lg:mx-32 mt-8">Part of our vision for a game studio involves giving players a transparent view into what it takes to make a game. 
			Follow us on social media for updates, or tune into our Twitch stream to 
			join us on the road to launching our first game!</h2>
	</div>
	<div class="lg:flex lg:justify-between w-[90%] mx-auto ">
		<div class="bg-white rounded-2xl lg:w-[30%] w-[90%] lg:mx-0 mx-auto lg:h-96 mb-16">
			<div class="pt-8 flex justify-center space-x-8">
				<LargeSocialIcon app='Twitter'/>
				<LargeSocialIcon app='Instagram'/>
			</div>
			<div class="h-44 flex items-center">
				<h3 class="p-4 text-[2em]">For development updates, sneak peaks into progress, and game promotion.</h3>
			</div>	
		</div>
		<div class="bg-white rounded-2xl lg:w-[30%] w-[90%] lg:mx-0 mx-auto lg:h-96 mb-16">
			<div class="pt-8 flex justify-center space-x-8">
				<LargeSocialIcon app='Tik Tok'/>
				<LargeSocialIcon app='Youtube'/>
			</div>
			<div class="h-44 flex items-center">
				<h3 class="p-4 text-[2em] lg:mx-2 mt-2">For short form content following our daily development.</h3>
			</div>			
		</div>
		<div class="bg-white rounded-2xl lg:w-[30%] w-[90%] lg:mx-0 mx-auto lg:h-96 mb-16">
			<div class="pt-8 flex justify-center space-x-8">
				<LargeSocialIcon app='LinkedIn'/>
			</div>
			<div class="h-44 flex items-center">
				<h3 class="p-4 text-[2em] lg:mx-2 mt-2">For studio updates, professional updates, and networking with us.</h3>
			</div>
		</div>
	</div>
	<div class="flex justify-center w-[90%] m-auto">
		<div class="bg-white lg:flex rounded-2xl lg:h-80 mb-16 lg:items-center w-[90%] lg:w-full mx-auto pl-8">
			<div class="pt-8 flex justify-center space-x-8">
				<LargeSocialIcon app='Twitch'/>
			</div>
			<h3 class="p-4 text-[2em]">
				Tune in to our Twitch stream! We will be live streaming our collaborative development process on: <br> <br>
				Tuesday: 1:00-3:30 PM EST <br>
				Wednesday: 1:00-3:30 PM EST <br>
				Thursday: 1:00-3:30 PM EST <br>

			</h3>
		</div>
	</div>
</FollowLayout>


<style>
	h1 {
		font-family: sans-serif;
		color: #ffffff;
		font-size: 3rem;
		font-weight: 400;
		line-height: 1;
		text-align: center;
		margin-bottom: 0.5em;
	}
	h2 {
		font-family: sans-serif;
		color: #ffffff;
		line-height: 1;
		text-align: left;
	}
	h3 {
		font-family: sans-serif;
		color: #000000;
		font-weight: 200;
		line-height: 1;
		text-align: left;
	}
	p{
		font-size: 1rem;
		text-align: center;
		color: #fffff;
	}
	html {
		background: #000000;
		height: 100%;
	}
</style>