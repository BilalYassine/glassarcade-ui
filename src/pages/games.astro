---
// Supports weights 100-900
import '@fontsource-variable/montserrat';
import { Image } from 'astro:assets';
import GamesLayout from "../layouts/games-layout.astro";
---

<GamesLayout>
	<div class="w-full flex justify-center z-0 pt-[110px]">
		<div class="w-full relative z-[-2]">
			<img src="./images/animated banner.gif" alt="Banner"/>
			<div class="absolute inset-0 flex justify-center items-center z-[1]">
				<img class="mx-auto w-[40%] align-middle lg:mx-0 lg:w-[48%]" src="./images/placeholder title.png" alt="WizGuy"/>
			</div>  
		</div>
	</div>
	<div class="w-full justify-center bg-black">
		<h2 class ="mx-16 text-[1.5em] lg:text-[2em] lg:mx-60 mt-16">Title of Game is Glass Arcades first game in development.</h2>
		<h2 class ="mx-16 text-[1.5em] lg:text-[2em] lg:mx-60 mt-16">A magical 2D platforming adventure with dynamic gameplay that evolves with the story.  It is a blend of all of our favorite styles of gameplay with inspirations from metroidvanias, and traditional sidescrollers. </h2>
	</div>
