---
// Supports weights 100-900
import '@fontsource-variable/montserrat';
import '@fontsource/poppins';
import { Image } from 'astro:assets';
import MainLayout from "../layouts/main-layout.astro";
---

<MainLayout>
	<div class="mt-40 mx-6 lg:mx-12">
		<div>
			<div>
				<div class="flex lg:m-10 mx-4 my-10">
					<h2>GLASS ARCADE</h2>
				</div>
				<div class="flex lg:m-10 mx-4 my-10" style="margin-top: -1.5rem;">
					<h4 class="text-[1em] lg:text-[2em]">A two-person indie game studio with a mission of creating digestible and memorable gaming experiences
						that are both fun and emotionally resonant with our players.
					</h4>
				</div>
				<div class="flex items-center w-full mx-10" style="margin-top: -2rem;">
					<div class="mt-8">
					  <div class="w-96 lg:w-[800px] h-1 bg-white border-0 rounded"></div>
					</div>
			    </div>		
			</div>
			<!-- <div class="m-auto h-48 w-48 lg:m-0 lg:h-64 lg:w-64">
				<img class="align-center" src="./images/wizguy idle.gif" alt="WizGuy"/>
			</div> -->
		</div>

		  <div class="flex lg:m-10 mx-4 my-10">
			<h3>Follow us on our journey</h3>
		</div>
		<div class="flex lg:flex-row flex-col items-center justify-start space-x-3 lg:m-10 mx-4 mt-10 space-y-4 lg:space-y-0" style="margin-top: -1.5rem;">
			<div>
				<h4 class="text-[1em] lg:text-[2em]">We are working on our first game, <h4Special>Dreamania</h4Special>, a surreal 2D action-adventure platformer about this guy
				</h4>
			</div>
			<!-- Sideways Arrow for Desktop-->
			<div class="hidden lg:flex">
				<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-right"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
			</div>
			<!-- Down Arrow for Desktop-->
			<div class="lg:hidden">
				<svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="#ffffff" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-down"><path d="M12 5v14"/><path d="m19 12-7 7-7-7"/></svg>
			</div>
			<div>
				<img class="align-center" src="/images/wizguy idle.gif" alt="WizGuy" height="100" width="100"/>
			</div>
		</div>
		<div class="align-middle" style="margin-top: -2rem;">
			<div class="lg:flex flex-column lg:flex-row lg:space-x-10">
			  <div class="basis-1/3 border-2 rounded-2xl border-primaryBlue h-40 my-10 flex flex-col justify-end">
				{/*Instagram and Twitter*/}
				<ul class="relative flex justify-center items-center w-full h-full mx-auto">
					<li class="mx-6">
						<a class="font-montserrat text-neutral-100" href={"https://www.instagram.com/glass_arcade_/"} >
							<div>
								<svg xmlns="https://www.w3.org/2000/svg" width="60" height="60" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.25" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-instagram text-white hover:text-primaryRed transition-colors">
									<rect width="20" height="20" x="2" y="2" rx="5" ry="5"/>
									<path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
									<line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/>
								  </svg>                          
							</div>
						</a>
					</li>
					<li class="mx-6">
