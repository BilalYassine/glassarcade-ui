---
// Supports weights 100-900
import '@fontsource-variable/montserrat';
import { Image } from 'astro:assets';
import MainLayout from "../layouts/main-layout.astro";
---

<MainLayout>
	<div class="mt-40 mx-12">
		<div>
			<div>
				<div class="flex m-10">
					<h2>GLASS ARCADE</h2>
				</div>
				<div class="flex m-10" style="margin-top: -1.5rem;">
					<h4 class="text-[1em] lg:text-[2em]">(test)</h4>
				</div>
		
				<div class="flex items-center w-full mx-10" style="margin-top: -1.5rem;">
					<div class="relative my-8">
					  <hr class="w-64 h-1 bg-gray-200 border-0 rounded dark:bg-gray-700">
					  <div class="absolute inset-0 flex justify-center" style="margin-top: -1.25rem;"> <!-- Adjust margin-top as needed -->
						<div class="px-4 bg-[#131313]">
							<svg xmlns="https://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="#FFFFFF" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-joystick"><path d="M21 17a2 2 0 0 0-2-2H5a2 2 0 0 0-2 2v2a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-2Z"/><path d="M6 15v-2"/><path d="M12 15V9"/><circle cx="12" cy="6" r="3"/></svg>
						</div>
					  </div>
					</div>
				  </div>		
			</div>
			<!-- <div class="m-auto h-48 w-48 lg:m-0 lg:h-64 lg:w-64">
				<img class="align-center" src="./images/wizguy idle.gif" alt="WizGuy"/>
			</div> -->
		</div>

		  <div class="flex m-10">
			<h3>Follow us on our journey</h3>
		</div>
		<div class="border-2 rounded-2xl border-[#f04e4f] h-20 m-10">
			<h3 class="mt-5">Live Streaming on Twitch</h3>
		</div>
		<div class="align-middle">
			<div class="lg:flex flex-column lg:flex-row">
			  <div class="basis-1/3 border-2 rounded-2xl border-[#87d3e2] h-40 m-10 flex flex-col justify-end">
				<h3 class="mb-5">Game Updates & Sneak Peeks</h3>
			  </div>
			  <div class="basis-1/3 border-2 rounded-2xl border-[#87d3e2] h-40 m-10 flex flex-col justify-end">
				<h3 class="mb-5">Dev Logs</h3>
			  </div>
			  <div class="basis-1/3 border-2 rounded-2xl border-[#87d3e2] h-40 m-10 flex flex-col justify-end">
				<h3 class="mb-5">Studio Updates</h3>
			  </div>
			</div>
		  </div>
		</div>
	</div>
</MainLayout>


<style>
	h1 {
		font-family: sans-serif;
		color: #ffffff;
		font-size: 5rem;
		font-weight: 400;
		line-height: 1;
		text-align: left;
	}
	h2 {
		font-family: sans-serif;
		color: #ffffff;
		font-size: 3.5rem;
		line-height: 1;
		text-align: left;
	}
	h3 {
		font-family: sans-serif;
		color: #ffffff;
		font-size: 2rem;
		font-weight: 200;
		line-height: 1;
		text-align: center;
	}
	h4 {
		font-family: sans-serif;
		color: #ffffff;
		font-size: 1.25rem;
		font-weight: 200;
		line-height: 1;
		text-align: center;
	}
	p{
		font-size: 1rem;
		text-align: center;
		color: #fffff;
	}
	html {
		background: #131313;
		height: 100%;
	}
</style>
